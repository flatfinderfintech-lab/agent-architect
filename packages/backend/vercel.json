{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "agent-architect-backend",
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**",
          "migrations/**",
          "products/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SUPABASE_URL": "@supabase-url",
    "SUPABASE_ANON_KEY": "@supabase-anon-key",
    "SUPABASE_SERVICE_KEY": "@supabase-service-key",
    "ANTHROPIC_API_KEY": "@anthropic-api-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "WEB_URL": "@web-url"
  },
  "functions": {
    "src/main.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
