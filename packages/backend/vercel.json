{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "agent-architect-backend",
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**",
          "migrations/**",
          "products/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/main.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
